{
  "files.associations": {
    ".prettierrc": "jsonc"
  },
  "editor.wordWrap": "off",
  "diffEditor.wordWrap": "off",
  "prettier.requireConfig": true,
  "[markdown]": {
    "editor.wordWrap": "off"
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\bDockerfile$",
        "cmd": "dockerfmt -w \"${file}\""
      }
    ]
  }
}
